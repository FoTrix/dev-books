---
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions';


interface Props {
	title?: string;
}

const { title = "Dev Books" } = Astro.props;                   
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100vh;
		background-color: #101500;
		color: #fff;
		@apply grid;
	}
	*{
		padding: 0;
	}
	.line-height-1-6{
		line-height: 1.6;
	}


	body > div{
		@apply container;
	}



</style>
